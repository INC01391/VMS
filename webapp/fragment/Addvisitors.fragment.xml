<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="Vistors Details" draggable="true" contentWidth="20rem" resizable="true" icon="sap-icon://activity-individual"
		class="sapUiSizeCompact" verticalScrolling="true">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<Title text="PERSONAL DETAILS"/>
					<Label text=" Name 1"/><Input id="Name1"/>
					<Label text=" Email Id"/><Input id="MailId1" type="Text"/>
					<Label text="Mobile"/><Input id="Mobile1" type="Number"/>
					<Label text="Unique Id "/><Input id="UniqueId1" type="Text"/>
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<Label text=" Name 2"/><Input id="Visitor2"/>
					<Label text=" Email Id"/><Input id="MailId2" type="Text"/>
					<Label text="Mobile"/><Input id="Mobile2" type="Number"/>
					<Label text="Unique Id "/><Input id="UniqueId2" type="Text"/>
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<Label text=" Name 2"/><Input id="Name3"/>
					<Label text=" Email Id"/><Input id="MailId3" type="Text"/>
					<Label text="Mobile"/><Input id="Mobile3" type="Number"/>
					<Label text="Unique Id "/><Input id="UniqueId3" type="Text"/>
					<Button icon="sap-icon://add" text="Add Visitors" press="onAddVisitors" type="Emphasized"></Button>
				</f:content>
			</f:SimpleForm>
		</content>
	</Dialog>