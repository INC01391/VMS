<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="REGISTRATION" draggable="true" contentWidth="40rem" resizable="true" icon="sap-icon://activity-individual"
		class="sapUiSizeCompact" verticalScrolling="true">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<core:Title text="MEETING DETAILS"></core:Title>
					<Label text="Purpose Of Visit"/><Input id="idPurpose" type="Text" value="{oFormModel>/oMeetingData/purpose}"/>
					<Label text="Meeting Date"/>
					<DatePicker id="date" valueFormat="yyyy-MM-dd" displayFormat="MMM dd, yyyy" value="{oFormModel>/oMeetingData/date}"></DatePicker>
					<Label text="Meeting Start Time"/>
					<TimePicker id="Starttime" valueFormat="HH-mm-ss" value="{oFormModel>/oMeetingData/beginTime}"></TimePicker>
					<Label text="Meeting End Time"/>
					<TimePicker id="Endtime" valueFormat="HH-mm-ss" value="{oFormModel>/oMeetingData/endTime}"></TimePicker>
					<Label text="Meeting Room Capacity"/><Input id="Room" type="Number" value="{oFormModel>/oMeetingData/capacity}"/>
					<Button icon="sap-icon://show" text="Check Availability" press="onCheckavailability" type="Emphasized"></Button>
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<core:Title text="PERSONAL DETAILS"></core:Title>
					<Label text="First Name"/><Input id="idFirstName" value="{oFormModel>/oFormData/firstName}"/>
					<Label text="Last Name"/><Input id="idLastName" value="{oFormModel>/oFormData/lastName}"/>
					<Label text=" Email Id"/><Input id="idMailId" type="Text" value="{oFormModel>/oFormData/email}"/>
					<Label text="Mobile"/><Input id="idMobile" type="Number" value="{oFormModel>/oFormData/contactNo}"/>
					<Label text="Organization"/><Input id="idOrganization" type="Text" value="{oFormModel>/oFormData/organization}"/>
					<Label text=" Id Type "/>
					<Select id="idIDType" selectedKey="{oFormModel>/oFormData/proofType}">
						<items>
							<core:Item text="Adhaar Id" key="Adhaar"/>
							<core:Item text="PAN ID" key="PAN"/>
							<core:Item text="Driving License" key="DrivingLicense"/>
						</items>
					</Select>
					<Label text="ID No"/><Input id="idIDNo" value="{oFormModel>/oFormData/proofNo}"/>
					<Button icon="sap-icon://add" text="Add Visitors" press="onAddVisitors" type="Emphasized"></Button>
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<core:Title text="PARKING DETAILS"></core:Title>
					<Label text=" Type Of Vehicle"/>
					<Select id="idVehicletype" selectedKey="{oFormModel>/oFormData/parkingType}">
						<items>
							<core:Item text="2-Wheeler" key="2-wheeler"/>
							<core:Item text="4-Wheeler" key="4-wheeler"/>
						</items>
					</Select>
					<!--<Label text="Vehicle Number"/><Input id="idVehicleNumber" type="Text" />-->
					<!--<Label text="Parking Slot"/><Input id="idParkingslot" type="Text"/>-->
					<Button icon="sap-icon://show" text="Check Availability" press="onCheckavailabilityParking" type="Emphasized"></Button>
				</f:content>
			</f:SimpleForm>
		</content>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button text="Register" press="onRegister" type="Emphasized"/>
			<Button text="Cancel" press="onCancel" type="Reject"/>
		</Toolbar>
	</Dialog>
</core:FragmentDefinition>