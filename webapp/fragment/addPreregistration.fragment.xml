<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="REGISTRATION" draggable="true" contentWidth="25rem" resizable="true" icon="sap-icon://activity-individual"
		class="sapUiSizeCompact" verticalScrolling="true">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
				columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
				<f:content>
					<Title text="PERSONAL DETAILS"/>
					<Label text=" Name"/><Input id="VisitorName"/>
					<Label text="Organization"/><Input id="VisitorOrganization" type="Text"/>
					<Label text=" Email Id"/><Input id="VisitorMailId" type="Text"/>
					<Label text="Mobile"/><Input id="VisitorMobile" type="Number"/>
					<Label text=" Id Type "/>
						<Select id="VisitorIDType" selectedKey="{VisitorID}">
							<items>
								<core:Item text="Adhaar Id" key="Adhaar"/>
								<core:Item text="PAN ID" key="PAN"/>
								<core:Item text="Driving License" key="DrivingLicense"/>
							</items>
						</Select>
						<Label text="ID No"/><Input id="VisitorID" type="Text"/>
						<Button icon="sap-icon://add" text="Add Visitors" press="onAddVisitors" type="Emphasized"></Button>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
					columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
					<f:content>
						<Title text="MEETING DETAILS"/>
						<Label text=" Purpose Of Visit"/><Input id="VisitorPurpose" type="Text"/>
						<Label text="Meeting Date"/>
						<DatePicker id="date" valueFormat="yyyy-MM-dd" displayFormat="MMM dd, yyyy"></DatePicker>
						<Label text="Meeting Start Time"/>
						<TimePicker id="Starttime" valueFormat="HH-mm-ss"></TimePicker>
						<Label text="Meeting End Time"/>
						<TimePicker id="Endtime" valueFormat="HH-mm-ss"></TimePicker>
						<Label text="Meeting Room Capacity"/><Input id="Room" type="Number"/>
						<Button icon="sap-icon://show" text="Check Availability" press="onCheckavailability" type="Emphasized"></Button>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="3" columnsM="9" emptySpanM="0" labelSpanL="3" labelSpanXL="4"
					columnsL="3" columnsXL="3" emptySpanL="5" emptySpanXL="6">
					<f:content>
						<Title text="PARKING DETAILS "/>
						<Label text=" Type Of Vehicle"/>
						<Select id="Vehicletype" selectedKey="{Vehicletype}">
							<items>
								<core:Item text="2-Wheeler" key="2wheeler"/>
								<core:Item text="4-Wheeler" key="4wheeler"/>
							</items>
						</Select>
						<Label text="Vehicle Number"/><Input id="VehicleNumber" type="Text"/>
						<Label text="Parking Slot"/><Input id="Parkingslot" type="Text"/>
					</f:content>
				</f:SimpleForm>
			</content>
			<Toolbar>
				<ToolbarSpacer></ToolbarSpacer>
				<Button text="Register" press="onRegister" type="Emphasized"/>
				<Button text="Cancel" press="onCancel" type="Reject"/>
			</Toolbar>
		</Dialog>
	</core:FragmentDefinition>