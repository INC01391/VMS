<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.incture.VMS.controller.Security"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt" xmlns:layout="sap.ui.layout"
	xmlns:chart="sap.suite.ui.microchart" xmlns:smartchart="sap.ui.comp.smartchart" xmlns:f="sap.f">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader class="sapUiResponsiveLayout styleHeader">
				<Bar>
					<contentLeft>
						<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press=".onMenuPress">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<Image src="./Images/logo_old.png" alt="Image not found" height="80%" press="onPressImage" class="sapUiResponsiveLayout"></Image>
					</contentLeft>
					<contentMiddle>
						<Label text="VISITOR MANAGEMENT SYSTEM"></Label>
					</contentMiddle>
					<contentRight>
						<core:Icon src="sap-icon://bell" tooltip="Notification" press="onNotificationPress" class="iconSize"></core:Icon >
						<Text text="{oAdminModel>/Notificationcount}" class="number"/>
						<Avatar src="data:image/png;base64,{oAdminModel>/userDetails/photo}" press="onUserPress" displaySize="XS"></Avatar>
					</contentRight>
				</Bar>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true" itemSelect=".onItemSelect" class="masterPage">
				<tnt:NavigationList>
					<tnt:NavigationListItem icon="sap-icon://bbyd-dashboard" text="Dashboard" key="dashboard"/>
					<tnt:NavigationListItem icon="sap-icon://employee-rejections" text="BlackListed Visitors" key="blacklisted"/>
					<tnt:NavigationListItem icon="sap-icon://cart-5" text="Delivery" key="delivery"/>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="dashboard">
				<pages>
					<ScrollContainer id="dashboard" horizontal="false" vertical="true" height="100%" class="sapUiSizeCompact">
						<l:HorizontalLayout class="date">
							<Label class="datelabel" text="Date:"/>
							<DatePicker class="date" dateValue="{/date}"/>
						</l:HorizontalLayout>
						<l:VerticalLayout width="100%">
							<l:Grid>
								<l:content>
									<GenericTile id="idCheckin" class="styleTile" header="Checked In" press="onCheckedIn">
										<TileContent>
											<core:Icon src="sap-icon://trend-down"></core:Icon>
										</TileContent>
										<layoutData>
											<l:GridData span="XL3 L3 M6 S12"/>
										</layoutData>
									</GenericTile>
									<GenericTile id="idCheckout" class="styleTile" header="Checked Out" press="onCheckedOut">
										<TileContent >
											<core:Icon src="sap-icon://trend-up"></core:Icon>
										</TileContent>
										<layoutData>
											<l:GridData span="XL3 L3 M6 S12"/>
										</layoutData>
									</GenericTile>
								</l:content>
							</l:Grid>
						</l:VerticalLayout>
						<Table id="idSecurityCheckedIn" inset="true" items="{path: 'oGlobalModel>/Details'}" visible="{oViewModel>/CheckedInVisibility}">
							<headerToolbar>
								<OverflowToolbar>
									<content>
										<Title text="CheckedIn" level="H3"/>
										<ToolbarSpacer></ToolbarSpacer>
										<Label text="Sort By:"></Label>
										<ComboBox width="8%">
											<core:Item text="{}"></core:Item>
										</ComboBox>
										<Input placeholder="Search" width="15%"></Input>
									</content>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>name}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>Contact}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>Time}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>vehicle}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>vehicleNum}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>slotNum}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem >
									<cells>
										<Text text="{oGlobalModel>Name}"/>
										<Text text="{oGlobalModel>Contact Number}"/>
										<Text text="{oGlobalModel>Time}"/>
										<Text></Text>
										<Text></Text>
										<Text></Text>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<Table id="idSecurityCheckedOut" inset="true" items="{path: 'oGlobalModel>/Details'}" visible="{oViewModel>/CheckedOutVisibility}">
							<headerToolbar>
								<OverflowToolbar>
									<content>
										<Title text="CheckedOut" level="H3"/>
										<ToolbarSpacer></ToolbarSpacer>
										<Label text="Sort By:"></Label>
										<ComboBox width="8%">
											<core:Item text="{}"></core:Item>
										</ComboBox>
										<Input placeholder="Search" width="15%"></Input>
									</content>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>name}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>Contact}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>Time}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>vehicle}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>vehicleNum}"/>
								</Column>
								<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
									<Text text="{i18n>slotNum}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem >
									<cells>
										<Text text="{oGlobalModel>Name}"/>
										<Text text="{oGlobalModel>Contact Number}"/>
										<Text text="{oGlobalModel>Time}"/>
										<Text></Text>
										<Text></Text>
										<Text></Text>
										<!--<Button></Button>-->
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>